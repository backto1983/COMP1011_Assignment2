<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="1000.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comp1011_assigment2.BookTableViewController">
    <stylesheets>
        <URL value="@usertableview.css" />
    </stylesheets>
   <children>
      <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="25.0" prefHeight="350.0" prefWidth="375.0">
         <children>
            <BarChart fx:id="barChart" horizontalGridLinesVisible="false" legendVisible="false" title="Books per genre" verticalGridLinesVisible="false">
              <xAxis>
                <CategoryAxis fx:id="genres" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="numberOfBooks" side="LEFT" />
              </yAxis>
            </BarChart>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" layoutX="400.0" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label text="List of Books">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <HBox prefWidth="500.0">
               <children>
                  <TableView fx:id="booksTable" prefHeight="276.0" prefWidth="404.0">
                    <columns>
                      <TableColumn fx:id="idColumn" prefWidth="25.0" text="ID" />
                      <TableColumn fx:id="titleColumn" prefWidth="125.0" text="Title" />
                        <TableColumn fx:id="authorColumn" prefWidth="125.0" text="Author" />
                        <TableColumn fx:id="genreColumn" prefWidth="77.0" text="Genre" />
                        <TableColumn fx:id="yearColumn" prefWidth="50.0" text="Year" />
                    </columns>
                  </TableView>
                  <VBox alignment="CENTER" prefHeight="275.0" prefWidth="175.0" spacing="20.0">
                     <children>
                        <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                        <Label text="Click on a book to see its cover" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                  <TextField promptText="Search by title" />
                <Button mnemonicParsing="false" text="Search" />
                  <Button fx:id="insertNewBookBtn" mnemonicParsing="false" text="Insert New Book" />
              </items>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </ToolBar>
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
