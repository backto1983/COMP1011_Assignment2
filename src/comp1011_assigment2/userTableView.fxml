<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="comp1011_assigment2.UserTableViewController">
    <stylesheets>
        <URL value="@usertableview.css" />
    </stylesheets>
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label text="List of Books">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <HBox prefWidth="500.0">
               <children>
                  <TableView fx:id="booksTable" prefHeight="276.0" prefWidth="404.0">
                    <columns>
                      <TableColumn fx:id="idColumn" prefWidth="25.0" text="ID" />
                      <TableColumn fx:id="titleColumn" prefWidth="125.0" text="Title" />
                        <TableColumn fx:id="authorColumn" prefWidth="125.0" text="Author" />
                        <TableColumn fx:id="genreColumn" prefWidth="75.0" text="Genre" />
                        <TableColumn fx:id="yearColumn" prefWidth="50.0" text="Year" />
                    </columns>
                  </TableView>
                  <VBox alignment="CENTER" prefHeight="275.0" prefWidth="175.0" spacing="20.0">
                     <children>
                        <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                        <Button fx:id="chooseImageButton" mnemonicParsing="false" text="Change Cover" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                  <TextField promptText="Search by title" />
                <Button mnemonicParsing="false" text="Search" />
                  <Button alignment="BOTTOM_RIGHT" mnemonicParsing="false" text="View Genre Chart">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
              </items>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </ToolBar>
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
